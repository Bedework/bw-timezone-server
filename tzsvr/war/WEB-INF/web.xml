<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
  <display-name>@DISPLAY-NAME@</display-name>

  <context-param>
    <param-name>debug</param-name>
    <param-value>@RPI-DEBUG@</param-value>
  </context-param>

  <!-- Do not alter or move  the following comment -->
  <!-- add context params here -->

  <listener>
    <listener-class>edu.rpi.sss.util.jsp.SessionListener</listener-class>
  </listener>

  <!-- Do not alter or move  the following comment -->
  <!-- add listeners here -->

  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>
      org.bedework.timezones.server.TzServer
    </servlet-class>
    <init-param>
      <param-name>application</param-name>
      <param-value>servlet</param-value>
    </init-param>
    <init-param>
      <param-name>dumpContent</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>1</param-value>
    </init-param>

    <load-on-startup>1</load-on-startup>

  </servlet>

  <!-- Do not alter or move  the following comment -->
  <!-- add servlet definitions here -->

  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- Do not alter or move  the following comment -->
  <!-- add servlet mappings here -->

  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>

  <!-- JDBC DataSources (java:comp/env/jdbc) -->
  <resource-ref>
    <description>The calendar DS</description>
    <res-ref-name>jdbc/calDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
