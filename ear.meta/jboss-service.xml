<?xml version="1.0" encoding="UTF-8"?>
<server>
  <mbean code="org.bedework.timezones.service.Tzsvc"
         name="org.bedework:service=Tzsvr">
    <attribute name="Appname">tzsvr</attribute>
    
    <attribute name="PrimaryUrl">http://dev.bedework.org/tzsvr</attribute>
    
    <!-- Location of the (backup) zip file -->
    <attribute name="TzdataUrl">${jboss.server.data.dir}/bedework/tzdata.zip</attribute>
    
    <!-- We also need the database -->
    <depends>jboss.jca:service=DataSourceBinding,name=TzDS</depends>
    
    <!-- We need activemq 
    <depends>jboss.jca:service=ConnectionFactoryBinding,name=activemq/QueueConnectionFactory</depends>
    -->    
  </mbean>
</server>
