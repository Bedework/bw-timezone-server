<?xml version="1.0"?>

<!-- ===================================================================
     Fetch or define extra jars for this application
     =================================================================== -->
<project name="extraJars" basedir="." default="">
  <macrodef name="getExtraJars">
    <sequential>
      <delete dir="${org.bedework.temp.extrajars.dir}" />
      <mkdir dir="${org.bedework.temp.extrajars.dir}" />

    	<!-- Generated by this project -->
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="bw-tzsvr-cmn" version="${org.bedework.bwtzsvr.version}"
              projecthome="${project.home}" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="bw-tzsvr" version="${org.bedework.bwtzsvr.version}"
              projecthome="${project.home}" />

      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="bw-tzsvr-svc" version="${org.bedework.bwtzsvr.version}"
              projecthome="${project.home}" />

      <!-- ======================= Schema jars ============================= -->

      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="bw-calws-soapschema" 
              version="${org.bedework.bwxml.version}"  
              projecthome="${project.home}/../bwxml" />

      <!-- ======================== json jars ============================== -->
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="jackson-core" version="2.1.1" />
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="jackson-annotations" version="2.1.1" />
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="jackson-databind" version="2.1.1" />

      <!-- ====================== Bedework jars ============================ -->
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="rpiutil" version="${org.bedework.rpiutil.version}" project="rpiutil"
              projecthome="${project.home}/../rpiutil" />
      
      <!-- Other jars -->

      <!--
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="commons-lang" version="2.1"/>-->

      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="ehcache" version="1.6.2" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="ical4j" version="1.0-rc3-SNAPSHOT"/>
      
      <!-- ======================= httpclient jars ============================ -->
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="httpclient" version="4.1.2"/>
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="httpcore" version="4.1.2"/>

      <!-- ======================= Hibernate jars ========================== -->
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="asm-attrs" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="asm" version="3.2" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="cglib" version="2.1.3" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="hibernate" version="3.6.9.Final" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="hibernate-validator" version="3.1.0.GA" />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="jta" version="1.1"  />
      
      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="commons-collections"/>
      
      <!-- ======================= Commons jars ============================ -->

      <getJar lib="${org.bedework.temp.extrajars.dir}"
              libcache="${org.bedework.libcache.dir}"
              name="commons-lang" version="2.6"/>      
    </sequential>
 </macrodef>
</project>
